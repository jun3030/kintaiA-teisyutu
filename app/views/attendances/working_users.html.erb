<h1>出勤社員一覧</h1>


<table class="table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>社員番号</th>
      <th>名前</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% if user.attendances.find_by(worked_on: Date.today).try(:started_at).present? && user.attendances.find_by(worked_on: Date.today).try(:finished_at).blank? %>
        <td><%= user.employee_number %></td>
        <td><%= user.name %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>